<body>

    <div id="main-layout">
        <aside id="aside-menu">
            <h2>Control de Nodos</h2>
            <input type="text" id="search-bar" placeholder="Buscar nombre de nodo...">
            
            <div id="filter-hidden-container">
                <input type="checkbox" id="filter-hidden-checkbox">
                <label for="filter-hidden-checkbox">Mostrar sólo nodos ocultos</label>
            </div>

            <div id="node-list-container">
                <div id="node-list">
                    <p style="color: #999; margin: 0; font-size: 12px;">Cargue datos para ver la lista de nodos.</p>
                </div>
            </div>
        </aside>

        <div id="chart-container">
        </div>
    </div>

    <div id="tooltip"></div>

    <footer id="footer">
        <span>Herramienta de Visualización de Red (Front-end)</span>
        
        <div id="file-controls">
            <label for="file-upload-data">Cargar Datos (Simple)</label>
            <input type="file" id="file-upload-data" accept=".xlsx, .xls, .csv">
            
            <label for="file-upload-coords">Cargar Datos (Organizados)</label>
            <input type="file" id="file-upload-coords" accept=".xlsx, .xls, .csv">

            <button id="download-coords-btn" disabled>Descargar (Organizados)</button>
            <button id="capture-svg-btn">Capturar SVG</button>
        </div>
    </footer>

    <script>
        // --- 1. CONFIGURACIÓN INICIAL Y HERRAMIENTAS ---
        const container = document.getElementById('chart-container');
        const svg = d3.select(container).append("svg");
        const tooltip = d3.select("#tooltip");
        const downloadBtn = document.getElementById('download-coords-btn');
        const captureSvgBtn = document.getElementById('capture-svg-btn'); 
        const nodeMenu = d3.select("#node-list");
        const searchBar = document.getElementById('search-bar');
        const filterHiddenCheckbox = document.getElementById('filter-hidden-checkbox');

        let simulation;
        let currentNodes = []; 
        let currentLinks = []; 
        const hiddenNodes = new Set(); 
        const NODE_RADIUS_FACTOR = 3; 
        let gGraph; 
        const ARROW_HEAD_OFFSET = 10; 
        const MAX_WORDS_FOR_SHORT_LABEL = 2; // Nodos con más de 2 palabras serán ocultados
        
        const colorRange = [
            "#cccccc", 
            "#e0f7fa", 
            "#b2ebf2", 
            "#80deea", 
            "#4dd0e1", 
            "#26c6da", 
            "#00bcd4", 
            "#0097a7", 
            "#00838f", 
            "#006064", 
            "#054e58"  
        ];

        // --- FUNCIONES ESPECÍFICAS DE OCULTAR/MOSTRAR ---

        function updateNodeVisibility() {
            if (gGraph) {
                gGraph.selectAll(".node")
                    .classed("hidden-element", d => hiddenNodes.has(d.id));

                gGraph.selectAll(".link")
                    .classed("hidden-element", d => {
                        return hiddenNodes.has(d.source.id) || hiddenNodes.has(d.target.id);
                    });
            }
        }

        function toggleNodeVisibility(nodeId) {
            const nodeData = currentNodes.find(d => d.id === nodeId);
            if (!nodeData) return;

            if (hiddenNodes.has(nodeId)) {
                // HACIENDO VISIBLE: Restaurar posición fija (fx, fy) si existe
                hiddenNodes.delete(nodeId);
                
                if (nodeData.x !== undefined && nodeData.y !== undefined) {
                    nodeData.fx = nodeData.x;
                    nodeData.fy = nodeData.y;
                }
            } else {
                // OCULTANDO: Liberar posición fija
                hiddenNodes.add(nodeId);
                
                nodeData.fx = null;
                nodeData.fy = null;
            }
            
            if (simulation) simulation.alpha(0.1).restart();
            
            updateNodeVisibility();
            drawNodeMenu(currentNodes); 
        }

        // --- LÓGICA DEL MENÚ ASIDE (Sin cambios) ---

        function drawNodeMenu(nodes) {
            nodeMenu.html(""); 
            
            const searchTerm = searchBar.value.toLowerCase();
            const filterToHidden = filterHiddenCheckbox.checked; 

            const filteredNodes = nodes.filter(d => {
                const matchesSearch = d.name.toLowerCase().includes(searchTerm);
                const isHidden = hiddenNodes.has(d.id);
                
                let passesFilter;

                if (filterToHidden) {
                    passesFilter = isHidden;
                } else {
                    passesFilter = true;
                }

                return matchesSearch && passesFilter;
            });

            filteredNodes.sort((a, b) => a.name.localeCompare(b.name));

            nodeMenu.selectAll(".node-list-item")
                .data(filteredNodes, d => d.id)
                .join(
                    enter => {
                        const div = enter.append("div")
                            .attr("class", "node-list-item")
                            .on("click", (event, d) => toggleNodeVisibility(d.id));
                        
                        div.append("span")
                            .attr("class", "node-name")
                            // Muestra el nombre corto en el menú lateral para evitar desbordamiento
                            .text(d => d.name.length > 30 ? d.name.substring(0, 30) + "..." : d.name);
                        
                        div.append("i")
                            .attr("class", "fas fa-eye visibility-toggle")
                            .classed("hidden", d => hiddenNodes.has(d.id));
                        
                        return div;
                    },
                    update => {
                        update.select(".visibility-toggle")
                            .classed("hidden", d => hiddenNodes.has(d.id));
                        
                        return update;
                    },
                    exit => exit.remove()
                );
            
            if (nodes.length > 0 && filteredNodes.length === 0) {
                 nodeMenu.html(`<p style="color: #999; margin: 0; font-size: 12px;">No hay coincidencias para "${searchTerm}" con los filtros aplicados.</p>`);
            }
        }

        searchBar.addEventListener('input', () => {
            if (currentNodes.length > 0) drawNodeMenu(currentNodes);
        });

        filterHiddenCheckbox.addEventListener('change', () => {
            if (currentNodes.length > 0) drawNodeMenu(currentNodes);
        });


        // ----------------------------------------------------------------------------------
        // --- GESTIÓN DE ARCHIVOS Y CAPTURA (Sin cambios sustanciales) ---
        // ----------------------------------------------------------------------------------

        function calculateNodeSizes(nodes, links) {
            const nodeDegrees = {};
            nodes.forEach(node => nodeDegrees[node.id] = 0); 
            
            links.forEach(link => {
                if (nodeDegrees[link.target] !== undefined) {
                    nodeDegrees[link.target]++; 
                }
            });

            nodes.forEach(node => {
                node.degree = nodeDegrees[node.id] > 0 ? nodeDegrees[node.id] : 1; 
                node.radius = node.degree; 
            });
            return nodes;
        }

        function defineArrowMarker(svg, radius) {
            svg.select("defs").remove();
            const defs = svg.append("defs");
            defs.append("marker")
                .attr("id", "arrowhead")
                .attr("viewBox", "0 -5 10 10")
                .attr("refX", ARROW_HEAD_OFFSET) 
                .attr("refY", 0)
                .attr("markerWidth", 6)
                .attr("markerHeight", 6)
                .attr("orient", "auto")
                .append("path")
                .attr("d", "M0,-5L10,0L0,5")
                .attr("fill", "#999");
        }


        // GESTIÓN DE EVENTOS DE ARCHIVOS
        document.getElementById('file-upload-data').addEventListener('change', (e) => handleFile(e, false), false);
        document.getElementById('file-upload-coords').addEventListener('change', (e) => handleFile(e, true), false);
        downloadBtn.addEventListener('click', downloadCoords, false);
        captureSvgBtn.addEventListener('click', captureSvg, false); 

        function handleFile(e, expectCoords) {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(event) {
                try {
                    const data = new Uint8Array(event.target.result);
                    const workbook = XLSX.read(data, { type: 'array' });
                    const sheetName = workbook.SheetNames[0];
                    const json = XLSX.utils.sheet_to_json(workbook.Sheets[sheetName]);

                    hiddenNodes.clear(); 
                    
                    processData(json, expectCoords);
                    downloadBtn.disabled = false;
                } catch (error) {
                    alert("Error al procesar el archivo. Asegúrate de que es un XLS o CSV válido.");
                    console.error(error);
                }
                e.target.value = '';
            };
            reader.readAsArrayBuffer(file);
        }

        function downloadCoords() {
            if (currentLinks.length === 0) {
                alert("No hay datos cargados para descargar.");
                return;
            }

            const exportData = currentLinks.map(link => {
                const sourceX = link.source.x || 0;
                const sourceY = link.source.y || 0;
                const targetX = link.target.x || 0;
                const targetY = link.target.y || 0;

                return {
                    From: link.source.id,
                    CFrom: `${sourceX.toFixed(2)},${sourceY.toFixed(2)}`,
                    To: link.target.id,
                    CTo: `${targetX.toFixed(2)},${targetY.toFixed(2)}`,
                    Label: link.label
                };
            });
            
            const ws = XLSX.utils.json_to_sheet(exportData);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, "Red Organizada");

            XLSX.writeFile(wb, "red_organizada.xlsx");
        }
        
        function captureSvg() {
            if (currentNodes.length === 0) {
                alert("No hay nodos para capturar.");
                return;
            }
            
            const svgNode = svg.node();
            const serializer = new XMLSerializer();
            
            const clonedSvg = svgNode.cloneNode(false); 
            
            // Clonar y añadir el bloque <defs> (flechas)
            const defsNode = svgNode.querySelector('defs');
            if (defsNode) {
                clonedSvg.appendChild(defsNode.cloneNode(true));
            }
            
            const clonedG = gGraph.node().cloneNode(true);
            clonedG.removeAttribute('transform'); 
            clonedSvg.appendChild(clonedG);
            
            clonedSvg.querySelectorAll('.hidden-element').forEach(el => el.remove());
            // ADVERTENCIA: En el SVG exportado, los nombres largos aparecerán ocultos por la clase CSS.
            // Para mostrarlos en el SVG exportado, se podría añadir una lógica más compleja aquí,
            // pero para mantener el código simple, se asume que esta clase se mantendrá.
            
            let minX = Infinity, minY = Infinity, maxX = -Infinity, maxY = -Infinity;
            const nodesVisible = currentNodes.filter(d => !hiddenNodes.has(d.id));
            const padding = 50; 

            if (nodesVisible.length === 0) {
                alert("No hay nodos visibles para capturar.");
                return;
            }

            nodesVisible.forEach(d => {
                const r = d.radius * NODE_RADIUS_FACTOR;
                // No necesitamos el ajuste de altura para el texto multilínea, pero sí un padding mínimo
                minX = Math.min(minX, d.x - r - 30); 
                minY = Math.min(minY, d.y - r - 30);
                maxX = Math.max(maxX, d.x + r + 30);
                maxY = Math.max(maxY, d.y + r + 30);
            });

            const finalMinX = minX - padding;
            const finalMinY = minY - padding;
            const finalWidth = (maxX - minX) + 2 * padding;
            const finalHeight = (maxY - minY) + 2 * padding;

            clonedSvg.setAttribute('viewBox', `${finalMinX} ${finalMinY} ${finalWidth} ${finalHeight}`);
            clonedSvg.setAttribute('width', finalWidth);
            clonedSvg.setAttribute('height', finalHeight);

            // Añadir estilos CSS en línea
            const style = document.createElement('style');
            style.textContent = `
                .link { stroke: #999; stroke-opacity: 0.6; stroke-width: 1.5px; }
                .node circle { stroke: #fff; stroke-width: 2px; }
                .node text { font-size: 10px; fill: #333; text-anchor: middle; font-weight: bold; }
                #arrowhead path { fill: #999; } 
                .node-label-long { visibility: hidden; } /* Mantener la regla para el SVG */
            `;
            clonedSvg.prepend(style);

            let svgString = serializer.serializeToString(clonedSvg);
            
            svgString = '<?xml version="1.0" standalone="no"?>\r\n' + svgString;
            
            const svgBlob = new Blob([svgString], { type: "image/svg+xml;charset=utf-8" });
            const svgUrl = URL.createObjectURL(svgBlob);
            
            const downloadLink = document.createElement("a");
            downloadLink.href = svgUrl;
            downloadLink.download = "captura_red_optimizada.svg";
            document.body.appendChild(downloadLink);
            downloadLink.click();
            document.body.removeChild(downloadLink);
            
            URL.revokeObjectURL(svgUrl); 
        }

        function processData(rawLinks, expectCoords) {
            const nodeSet = new Map();
            const links = [];
            let hasCoords = false;

            rawLinks.forEach(d => {
                const sourceId = String(d.From || d.from || '').trim();
                const targetId = String(d.To || d.to || '').trim();
                const label = d.Label || d.label ? String(d.Label || d.label).trim() : '';
                
                if (sourceId && targetId) {
                    if (!nodeSet.has(sourceId)) nodeSet.set(sourceId, { id: sourceId, name: sourceId });
                    if (!nodeSet.has(targetId)) nodeSet.set(targetId, { id: targetId, name: targetId });
                    
                    if (expectCoords && d.CFrom && d.CTo) {
                        hasCoords = true;
                        
                        const [sfx, sfy] = String(d.CFrom).split(',').map(v => parseFloat(v.trim()));
                        if (!isNaN(sfx) && !isNaN(sfy)) {
                            nodeSet.get(sourceId).x = sfx;
                            nodeSet.get(sourceId).y = sfy;
                            nodeSet.get(sourceId).fx = sfx; 
                            nodeSet.get(sourceId).fy = sfy;
                        }

                        const [tfx, tfy] = String(d.CTo).split(',').map(v => parseFloat(v.trim()));
                        if (!isNaN(tfx) && !isNaN(tfy)) {
                            nodeSet.get(targetId).x = tfx;
                            nodeSet.get(targetId).y = tfy;
                            nodeSet.get(targetId).fx = tfx; 
                            nodeSet.get(targetId).fy = tfy;
                        }
                    }
                    
                    links.push({ source: sourceId, target: targetId, label: label });
                }
            });

            const nodes = Array.from(nodeSet.values());
            
            if (links.length > 0) {
                const nodesWithProperties = calculateNodeSizes(nodes, links);
                drawNetwork(nodesWithProperties, links, hasCoords);
                drawNodeMenu(nodesWithProperties); 
            } else {
                alert("El archivo no contiene las columnas 'From', 'To' y 'Label' esperadas o está vacío.");
            }
        }

        function centerAndZoom(nodes) {
            const width = container.clientWidth;
            const height = container.clientHeight;
            const padding = 50;

            if (nodes.length === 0) return;

            let minX = Infinity, minY = Infinity, maxX = -Infinity, maxY = -Infinity;

            nodes.forEach(d => {
                const r = d.radius * NODE_RADIUS_FACTOR;
                minX = Math.min(minX, d.x - r);
                minY = Math.min(minY, d.y - r);
                maxX = Math.max(maxX, d.x + r);
                maxY = Math.max(maxY, d.y + r);
            });

            const dataWidth = maxX - minX;
            const dataHeight = maxY - minY;
            
            const scaleX = (width - 2 * padding) / dataWidth;
            const scaleY = (height - 2 * padding) / dataHeight;
            const scale = Math.min(scaleX, scaleY, 1.0); 

            if (!isFinite(scale) || scale === 0) return;
            
            const translateX = width / 2 - (minX + dataWidth / 2) * scale;
            const translateY = height / 2 - (minY + dataHeight / 2) * scale;
            
            const transform = d3.zoomIdentity.translate(translateX, translateY).scale(scale);

            svg.call(zoom.transform, transform);
        }

        const zoom = d3.zoom()
            .scaleExtent([0.1, 10]) 
            .on("zoom", (event) => {
                gGraph.attr("transform", event.transform);
            });

        function drawNetwork(nodes, links, fixedLayout) {
            svg.selectAll("*").remove(); 

            currentNodes = nodes; 
            currentLinks = links; 

            const width = container.clientWidth;
            const height = container.clientHeight;

            const maxRadiusValue = d3.max(nodes, d => d.radius * NODE_RADIUS_FACTOR) || 15;
            defineArrowMarker(svg, maxRadiusValue); 
            
            svg.call(zoom);
            
            gGraph = svg.append("g"); 

            const colorScale = d3.scaleOrdinal()
                .domain(d3.range(1, d3.max(nodes, d => d.degree) + 1)) 
                .range(colorRange); 

            if (simulation) {
                simulation.stop();
            }
            
            const alphaTarget = fixedLayout ? 0.0 : 0.6; 
            
            simulation = d3.forceSimulation(nodes)
                .alphaTarget(alphaTarget)
                .force("link", d3.forceLink(links).id(d => d.id).distance(60))
                .force("charge", d3.forceManyBody().strength(-30)) 
                .force("center", d3.forceCenter(width / 2, height / 2))
                
                .force("limitX", d3.forceX(width / 2).strength(d => {
                    const radius = d.radius * NODE_RADIUS_FACTOR;
                    if (d.x < radius || d.x > width - radius) return 0.5;
                    return 0;
                }))
                .force("limitY", d3.forceY(height / 2).strength(d => {
                    const radius = d.radius * NODE_RADIUS_FACTOR;
                    if (d.y < radius || d.y > height - radius) return 0.5;
                    return 0;
                }));


            const link = gGraph.append("g")
                .attr("class", "links")
                .selectAll("line")
                .data(links)
                .join("line")
                .attr("class", "link")
                .attr("marker-end", "url(#arrowhead)") 
                
                .on("mouseover", function(event, d) {
                    tooltip.style("opacity", 1)
                           .html(d.label)
                           .style("left", (event.pageX + 10) + "px")
                           .style("top", (event.pageY - 28) + "px");
                    d3.select(this).style("stroke", "#ff0000").style("stroke-width", "3px");
                })
                .on("mouseout", function() {
                    tooltip.style("opacity", 0);
                    d3.select(this).style("stroke", "#999").style("stroke-width", "1.5px");
                });

            const node = gGraph.append("g")
                .attr("class", "nodes")
                .selectAll(".node")
                .data(nodes)
                .join("g")
                .attr("class", "node")
                .call(drag(simulation))
                
                // EVENTOS MOUSEOVER/MOUSEOUT PARA MOSTRAR/OCULTAR EL TEXTO
                .on("mouseover", function(event, d) {
                    // Muestra el nombre completo del nodo al pasar el cursor
                    d3.select(this).select("text").classed("node-label-long", false);
                })
                .on("mouseout", function(event, d) {
                    // Oculta el nombre solo si es un nombre "largo" (más de 2 palabras)
                    if (d.name.trim().split(/\s+/).length > MAX_WORDS_FOR_SHORT_LABEL) {
                        d3.select(this).select("text").classed("node-label-long", true);
                    }
                }); 

            node.append("circle")
                .attr("r", d => d.radius * NODE_RADIUS_FACTOR)
                .attr("fill", d => {
                    const colorIndex = d.degree - 1; 
                    return colorRange[colorIndex] || colorRange[colorRange.length - 1]; 
                });

            // *** MODIFICACIÓN AQUÍ: ETIQUETA DE TEXTO SIMPLE CON CLASIFICACIÓN DE LONGITUD ***
            node.append("text")
                .text(d => d.name)
                .attr("dy", 3)
                .attr("y", d => (d.radius * NODE_RADIUS_FACTOR) + 7)
                // Aplica la clase de ocultamiento si el nombre supera el límite de palabras
                .classed("node-label-long", d => {
                    return d.name.trim().split(/\s+/).length > MAX_WORDS_FOR_SHORT_LABEL;
                });


            simulation.on("tick", () => {
                link
                    .each(function(d) {
                        const radiusTarget = d.target.radius * NODE_RADIUS_FACTOR;
                        const dx = d.target.x - d.source.x;
                        const dy = d.target.y - d.source.y;
                        const distance = Math.sqrt(dx * dx + dy * dy);

                        if (distance > radiusTarget) { 
                            const offset = radiusTarget + ARROW_HEAD_OFFSET; 
                            const ratio = Math.max(0, distance - offset) / distance; 
                            
                            d.endX = d.source.x + (dx * ratio);
                            d.endY = d.source.y + (dy * ratio);
                        } else {
                            d.endX = d.target.x;
                            d.endY = d.target.y;
                        }
                    })
                    .attr("x1", d => d.source.x)
                    .attr("y1", d => d.source.y)
                    .attr("x2", d => d.endX) 
                    .attr("y2", d => d.endY); 

                node
                    .attr("transform", d => `translate(${d.x},${d.y})`);
            });
            
            updateNodeVisibility(); 
            
            if (fixedLayout) {
                centerAndZoom(nodes);
            }
        }
        
        // FUNCIÓN DRAG AND DROP (Sin cambios)
        function drag(simulation) {
            function dragstarted(event, d) {
                if (!event.active) simulation.alphaTarget(0.3).restart();
                d.fx = d.x; 
                d.fy = d.y; 
                d3.select(this).raise().attr("stroke", "black");
            }
            function dragged(event, d) {
                d.fx = event.x; 
                d.fy = event.y;
            }
            function dragended(event, d) {
                if (!event.active) simulation.alphaTarget(0);
                d3.select(this).attr("stroke", null);
            }
            return d3.drag()
                .on("start", dragstarted)
                .on("drag", dragged)
                .on("end", dragended);
        }

        drawNetwork([], []); 

    </script>
</body>
</html>
